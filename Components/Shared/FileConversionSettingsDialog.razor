@using PdfMerger.Client.Models

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">Conversion Settings for @FileName</MudText>

            <MudDivider />

            @* Toggle: Use Global Settings vs Custom Settings *@
            <MudSwitch @bind-Value="_useCustomSettings" Color="Color.Primary" Label="Use Custom Settings for This File" />

            @if (!_useCustomSettings)
            {
                <MudAlert Severity="Severity.Info" Variant="Variant.Filled">
                    This file will use the global conversion settings configured in the main panel.
                </MudAlert>
            }
            else
            {
                <MudPaper Elevation="1" Class="pa-4">
                    <MudStack Spacing="3">
                        @* Page Size *@
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2">Page Size</MudText>
                            <MudSelect T="PageSize" @bind-Value="_settings.PageSize" Variant="Variant.Outlined" Margin="Margin.Dense">
                                <MudSelectItem Value="PageSize.A4">A4 (210 × 297 mm)</MudSelectItem>
                                <MudSelectItem Value="PageSize.A3">A3 (297 × 420 mm)</MudSelectItem>
                                <MudSelectItem Value="PageSize.A5">A5 (148 × 210 mm)</MudSelectItem>
                                <MudSelectItem Value="PageSize.Letter">Letter (8.5 × 11 in)</MudSelectItem>
                                <MudSelectItem Value="PageSize.Legal">Legal (8.5 × 14 in)</MudSelectItem>
                                <MudSelectItem Value="PageSize.Tabloid">Tabloid (11 × 17 in)</MudSelectItem>
                            </MudSelect>
                        </MudStack>

                        @* Orientation *@
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2">Orientation</MudText>
                            <MudRadioGroup T="PageOrientation" @bind-Value="_settings.Orientation">
                                <MudRadio T="PageOrientation" Value="PageOrientation.Portrait" Color="Color.Primary">
                                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                        <MudIcon Icon="@Icons.Material.Filled.Portrait" Size="Size.Small" />
                                        <MudText>Portrait</MudText>
                                    </MudStack>
                                </MudRadio>
                                <MudRadio T="PageOrientation" Value="PageOrientation.Landscape" Color="Color.Primary">
                                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                        <MudIcon Icon="@Icons.Material.Filled.Landscape" Size="Size.Small" />
                                        <MudText>Landscape</MudText>
                                    </MudStack>
                                </MudRadio>
                            </MudRadioGroup>
                        </MudStack>

                        @* Image Crop Mode *@
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2">Image Fitting</MudText>
                            <MudSelect T="ImageCropMode" @bind-Value="_settings.CropMode" Variant="Variant.Outlined" Margin="Margin.Dense">
                                <MudSelectItem Value="ImageCropMode.None">None (Original Size)</MudSelectItem>
                                <MudSelectItem Value="ImageCropMode.Fit">Fit (Preserve Aspect Ratio)</MudSelectItem>
                                <MudSelectItem Value="ImageCropMode.Fill">Fill (Crop to Fit)</MudSelectItem>
                                <MudSelectItem Value="ImageCropMode.Stretch">Stretch (Ignore Aspect Ratio)</MudSelectItem>
                            </MudSelect>
                        </MudStack>

                        @* Image Quality *@
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.subtitle2">Image Quality: @_settings.ImageQuality%</MudText>
                            <MudSlider @bind-Value="_settings.ImageQuality" Min="50" Max="100" Step="5" Color="Color.Info" />
                        </MudStack>

                        @* Image Options *@
                        <MudSwitch @bind-Value="_settings.CompressImages" Color="Color.Primary" Label="Compress Images" />
                        <MudSwitch @bind-Value="_settings.AutoRotateFromExif" Color="Color.Primary" Label="Auto-Rotate from EXIF Data" />
                    </MudStack>
                </MudPaper>
            }
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        @if (_useCustomSettings)
        {
            <MudButton Color="Color.Secondary" OnClick="ClearCustomSettings">Use Global Settings</MudButton>
        }
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Apply</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public string FileName { get; set; } = string.Empty;

    [Parameter]
    public PdfConversionOptions Settings { get; set; } = new();

    private PdfConversionOptions _settings = new();
    private bool _useCustomSettings;

    protected override void OnInitialized()
    {
        // Make a copy of the settings to avoid modifying the original until Apply is clicked
        _settings = new PdfConversionOptions
        {
            PageSize = Settings.PageSize,
            Orientation = Settings.Orientation,
            Margins = new Margins
            {
                Top = Settings.Margins.Top,
                Right = Settings.Margins.Right,
                Bottom = Settings.Margins.Bottom,
                Left = Settings.Margins.Left
            },
            AddPageNumbers = Settings.AddPageNumbers,
            NumberPosition = Settings.NumberPosition,
            NumberFormat = Settings.NumberFormat,
            ImageQuality = Settings.ImageQuality,
            CompressImages = Settings.CompressImages,
            AutoRotateFromExif = Settings.AutoRotateFromExif,
            CropMode = Settings.CropMode,
            Compression = Settings.Compression,
            Format = Settings.Format
        };

        // Determine if custom settings are being used (checking if Settings parameter was provided with non-default values)
        _useCustomSettings = Settings.PageSize != PageSize.A4 ||
                            Settings.Orientation != PageOrientation.Portrait ||
                            Settings.ImageQuality != 85 ||
                            Settings.CropMode != ImageCropMode.None;
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private void ClearCustomSettings()
    {
        _useCustomSettings = false;
    }

    private void Submit()
    {
        if (_useCustomSettings)
        {
            MudDialog.Close(DialogResult.Ok(new { Settings = _settings }));
        }
        else
        {
            // Return null to indicate no custom settings (use global)
            MudDialog.Close(DialogResult.Ok(new { Settings = (PdfConversionOptions?)null }));
        }
    }
}
